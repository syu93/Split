.carousel-header
{
	width: 900px;
	margin-left: auto;
	margin-right: auto;
}
.slideShow
{
	position:absolute;
	/*width: 75%;
	height: 30%;
	
	margin-top: 10px;
	margin-right: auto;
	margin-left: auto;*/
	
	
	
	/* IE9 SVG, needs conditional override of 'filter' to 'none' */
	background: url(data:image/svg+xml;base64,);
	background: -moz-linear-gradient(top,  rgba(128,128,128,0.7) 0%, rgba(173,177,180,1) 51%, rgba(217,225,229,0.1) 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(128,128,128,0.7)), color-stop(51%,rgba(173,177,180,1)), color-stop(100%,rgba(217,225,229,0.1))); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top,  rgba(128,128,128,0.7) 0%,rgba(173,177,180,1) 51%,rgba(217,225,229,0.1) 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top,  rgba(128,128,128,0.7) 0%,rgba(173,177,180,1) 51%,rgba(217,225,229,0.1) 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(top,  rgba(128,128,128,0.7) 0%,rgba(173,177,180,1) 51%,rgba(217,225,229,0.1) 100%); /* IE10+ */
	background: linear-gradient(to bottom,  rgba(128,128,128,0.7) 0%,rgba(173,177,180,1) 51%,rgba(217,225,229,0.1) 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#b3808080', endColorstr='#1ad9e1e5',GradientType=0 ); /* IE6-8 */








	-webkit-box-shadow: 0 -5px 6px 0 #E9EDF0;
	box-shadow: 0 -5px 6px 0 #E9EDF0;

	
}